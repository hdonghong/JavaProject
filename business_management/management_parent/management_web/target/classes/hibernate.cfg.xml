<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
	"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		
		<property name="dialect">org.hibernate.dialect.Oracle10gDialect</property>
		<property name="show_sql">true</property>
		<property name="format_sql">none</property>
		<!-- 懒加载，配合web.xml中配置的 openSessionInViewFilter -->
		<property name="hibernate.enable_lazy_load_no_trans">true</property>
        <!--校验模式  JPA  java persistent api-->
		<property name="javax.persistence.validation.mode">none</property>
		
		<!-- 加载配置文件 -->
		<mapping resource="pers/hdh/management/domain/Dept.hbm.xml" />
		<mapping resource="pers/hdh/management/domain/User.hbm.xml" />
		<mapping resource="pers/hdh/management/domain/Userinfo.hbm.xml" />
		<mapping resource="pers/hdh/management/domain/Role.hbm.xml" />
		<mapping resource="pers/hdh/management/domain/Module.hbm.xml" />
		<mapping resource="pers/hdh/management/domain/Contract.hbm.xml" />
		<mapping resource="pers/hdh/management/domain/ContractProduct.hbm.xml" />
		<mapping resource="pers/hdh/management/domain/ExtCproduct.hbm.xml" />
		<mapping resource="pers/hdh/management/domain/Factory.hbm.xml" />
	
	</session-factory>
</hibernate-configuration>