<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
    
<hibernate-mapping package="pers.hdh.management.domain">
	<class name="Dept" table="DEPT_P">
		<id name="id" column="DEPT_ID" >
			<generator class="uuid" />
		</id>
		
		<property name="deptName" column="DEPT_NAME"></property>
		<property name="state" column="STATE"></property>
		
		<!-- 自关联，子部门与父部门，多对一 -->
		<many-to-one name="parent" column="PARENT_ID" class="Dept" ></many-to-one>
		<!-- private Set<User> users = new HashSet<>(); // 部门与用户 一对多 -->
		<set name="users" >
			<key column="DEPT_ID"></key>
			<one-to-many class="User"/>
		</set>
	</class>
</hibernate-mapping>